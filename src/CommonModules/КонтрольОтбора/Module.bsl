        РегистрыСведений.ЖурналОшибокКонтроляОтбора.ЗаписатьОшибку(ТекущаяДатаСеанса(),
                                                                   Задание,
                                                                   Комплектовщик,
                                                                   ВидОшибки,
                                                                   ,
                                                                   ,
                                                                   Штрихкод);

    КонецЕсли;

